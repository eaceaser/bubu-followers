{
  "type": "object",
  "properties": {
    "clientid": {
      "description": "Twitch.tv ClientID see https://github.com/justintv/Twitch-API/blob/master/authentication.md",
      "type": "string",
      "default": ""
    },
    "username": {
      "description": "Twitch.tv username",
      "type": "string",
      "default": ""
    },
    "pollInterval": {
      "description": "Interval to update followers (seconds)",
      "type": "integer",
      "default": 30,
      "minimum": 30
    }
  },
  "required": ["username", "clientid"]
}
